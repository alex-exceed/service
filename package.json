{
	"private": true,
	"name": "service-manual",
	"homepage": "https://service-manual.apps.staging.digital.gov.au/",
	"twitter": "DTA",
	"repository": "https://github.com/govau/service-manual",
	"scripts": {
		"lint:js": "eslint --ignore-path .gitignore --fix .",
		"lint:css": "stylelint \"src/**/*.css\"",
		"lint": "npm-run-all --parallel lint:*",
		"start": "phenomic start",
		"build": "phenomic build",
		"test": "jest"
	},
	"phenomic": {
		"source": "content",
		"destination": "dist",
		"assets": "assets",
		"clientScripts": false,
		"CNAME": false,
		"offline": true
	},
	"jest": {
		"testRegex": "\\.test.js$",
		"collectCoverageFrom": [
			"src"
		],
		"moduleNameMapper": {
			"\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
		}
	},
	"#babel": "webpack-(development|production) are useful for webpack 2, otherwise use development|production",
	"babel": {
		"env": {
			"test": {
				"presets": [
					"babel-preset-env",
					"babel-preset-stage-2",
					"babel-preset-react"
				]
			},
			"development": {
				"presets": [
					"babel-preset-env",
					"babel-preset-stage-2",
					"babel-preset-react"
				],
				"plugins": [
					"babel-plugin-transform-react-jsx-source",
					"babel-plugin-transform-react-jsx-self",
					"react-hot-loader/babel"
				]
			},
			"production": {
				"presets": [
					"babel-preset-react-optimize",
					"babel-preset-env",
					"babel-preset-stage-2",
					"babel-preset-react"
				]
			},
			"webpack-development": {
				"presets": [
					[
						"babel-preset-env",
						{
							"modules": false
						}
					],
					"babel-preset-stage-2",
					"babel-preset-react"
				],
				"plugins": [
					"babel-plugin-transform-react-jsx-source",
					"babel-plugin-transform-react-jsx-self",
					"react-hot-loader/babel"
				]
			},
			"webpack-production": {
				"presets": [
					"babel-preset-react-optimize",
					[
						"babel-preset-env",
						{
							"modules": false
						}
					],
					"babel-preset-stage-2",
					"babel-preset-react"
				]
			}
		}
	},
	"eslintConfig": {
		"root": true,
		"extends": "./node_modules/phenomic/lib/eslint-config-recommended/index.js"
	},
	"stylelint": {
		"extends": "./node_modules/phenomic/lib/stylelint-config-recommended/index.js"
	},
	"devDependencies": {
		"@gov.au/body": "^0.1.1",
		"@gov.au/buttons": "^0.3.0",
		"@gov.au/core": "^0.1.2",
		"@gov.au/footer": "^0.1.0",
		"@gov.au/grid-12": "^0.1.0",
		"@gov.au/header": "^1.0.0",
		"@gov.au/link-list": "^0.1.0",
		"autoprefixer": "^7.0.1",
		"babel-cli": "^6.14.0",
		"babel-core": "^6.14.0",
		"babel-eslint": "^7.0.0",
		"babel-loader": "^7.0.0-beta.1",
		"babel-plugin-transform-react-jsx-self": "^6.11.0",
		"babel-plugin-transform-react-jsx-source": "^6.9.0",
		"babel-preset-env": "^1.3.2",
		"babel-preset-react": "^6.23.0",
		"babel-preset-react-optimize": "^1.0.1",
		"babel-preset-stage-2": "^6.22.0",
		"classnames": "^2.2.5",
		"css-loader": "^0.28.0",
		"eslint": "^3.7.1",
		"eslint-loader": "^1.7.1",
		"eslint-plugin-react": "^6.4.0",
		"extract-text-webpack-plugin": "^2.1.0",
		"file-loader": "^0.10.1",
		"history": "^2.0.0",
		"jest-cli": "^20.0.0",
		"jest-css-modules": "^1.1.0",
		"node-sass": "^4.5.2",
		"npm-run-all": "^1.7.0",
		"phenomic": "^0.21.1",
		"postcss-browser-reporter": "^0.4.0",
		"postcss-cssnext": "^2.4.0",
		"postcss-loader": "^1.3.3",
		"postcss-reporter": "^1.3.0",
		"prop-types": "^15.5.8",
		"raw-loader": "^0.5.1",
		"react": "^15.0.0",
		"react-dom": "^15.0.0",
		"react-helmet": "^3.0.0",
		"react-hot-loader": "^3.0.0-beta",
		"react-redux": "^4.0.0",
		"react-router": "^2.3.0",
		"react-sticky": "^6.0.1",
		"react-svg-inline": "^1.1.0",
		"react-topbar-progress-indicator": "^1.0.0",
		"redux": "^3.0.0",
		"sass-loader": "^6.0.3",
		"style-loader": "^0.13.0",
		"stylelint": "^7.2.0",
		"warning": "^3.0.0",
		"webpack": "^2.3.0",
		"whatwg-fetch": "^0.11.0"
	},
	"author": {
		"name": "Commonwealth of Australia, DTA",
		"email": "guides@digital.gov.au",
		"url": "https://www.dta.gov.au/"
	},
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "hi@dominik-wilkowski.com",
			"url": "https://dominik-wilkowski.com/"
		},
		{
			"name": "Simon Schwartz",
			"email": "simon.schwartz0@gmail.com",
			"url": "https://simonschwartz.github.io/"
		}
	],
	"dependencies": {
		"@gov.au/pancake-sass": "^1.1.0",
		"express": "^4.15.2",
		"remark-external-links": "^1.0.1"
	},
	"browserslist": [
		"last 2 versions",
		"ie 8",
		"ie 9",
		"ie 10"
	],
	"pancake": {
		"auto-save": false,
		"plugins": true,
		"ignore": [],
		"css": {
			"minified": true,
			"modules": false,
			"browsers": [
				"last 2 versions",
				"ie 8",
				"ie 9",
				"ie 10"
			],
			"location": false,
			"name": false
		},
		"sass": {
			"modules": true,
			"location": "src/uikit/sass/",
			"name": false
		}
	}
}
